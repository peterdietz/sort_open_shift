<p id="notice"><%= notice %></p>

<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>Houroffset</th>
      <th>Shiftcount</th>
      <th>Recentshifts</th>
      <th>Nonrecentshifts</th>
      <th>Shits</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.hourOffset %></td>
        <td><%= score.shiftCount %></td>
        <td><%= score.recentShifts %></td>
        <td><%= score.nonRecentShifts %></td>
        <td><%= score.SHITS %></td>
        <td><%= link_to score.employee.name, employee_path(score.employee) %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

